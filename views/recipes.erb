<body class="lfcs-background">
  <div class="container">
    <h2>Recipes</h2>
    <p></p>
      <form action="/recipes" method="post">
          <div class="form-group">
            <!-- <label for="name">Add a new recipe:</label> -->
            <input type="text" class="form-control" name="name" placeholder="e.g. Chicken Parmesan">
          </div>
        <button type="submit" class="btn btn-danger btn-md">Add</button>
      </form>
    </br>
    <table class="table">
      <tr>
        <th>Recipe Name</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
        <% if @recipes %>
          <% @recipes.each do |recipe| %>
            <tr>
              <td><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></td>
              <td><a href="/recipes/<%= recipe.id %>/edit">Edit</a></td>
              <td><a href="/recipes/<%= recipe.id %>/delete">Delete</a></td>
            </tr>
          <% end %>
        <% end %>
    </table>
  </div>
</body>
